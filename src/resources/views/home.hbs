<div class="">
  <div class="row">
    {{#each courses}}
      <div class="col col-sm-6 col-lg-4 mt-4">
        <div class="card" style="width: 100;">
          <a href="/course/{{this.slug}}">
            <img src="{{this.image}}" class="card-img-top" alt="..." />
          </a>
          <div class="card-body">
            <a href="/course/{{this.slug}}">
              <h5 class="card-title">{{this.name}}</h5>
            </a>
            <p class="fs-6 card-text">{{this.decription}}</p>
            <a href="/course/{{this.slug}}" class="btn btn-primary">Mua khoá học</a>
          </div>
        </div>
      </div>
    {{/each}}
  </div>
</div>